{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "tba",
            "isShellCommand": true,
            "command": "docker",
            "echoCommand": true,
            "args": [
                "run",
                "--rm",
                "-v=%cd%/theoretical-part:/data",
                "janstuemmel/latex",
                "sh",
                "-c",
                "pdflatex thesis && biber thesis && pdflatex thesis && pdflatex thesis"
            ]
        },
        {
            "taskName": "pba",
            "isShellCommand": true,
            "command": "docker",
            "echoCommand": true,
            "args": [
                "run",
                "--rm",
                "-v=%cd%/practical-part:/data",
                "janstuemmel/latex",
                "sh",
                "-c",
                "pdflatex thesis && biber thesis && pdflatex thesis && pdflatex thesis"
            ]
        },
        {
            "taskName": "tba-expose",
            "isShellCommand": true,
            "command": "docker",
            "echoCommand": true,
            "args": [
                "run",
                "--rm",
                "-v=%cd%/theoretical-part-expose:/data",
                "janstuemmel/latex",
                "sh",
                "-c",
                "pdflatex expose"
            ]
        },
        {
            "taskName": "pba-expose",
            "isShellCommand": true,
            "isBuildCommand": true,
            "command": "docker",
            "echoCommand": true,
            "args": [
                "run",
                "--rm",
                "-v=%cd%/practical-part-expose:/data",
                "janstuemmel/latex",
                "sh",
                "-c",
                "mkdir -p dist/ && pdflatex -output-directory=dist expose && cp dist/expose.pdf ./ 2>/dev/null && rm -rf dist/"
            ]
        }
    ]
}
